define(["apps/_verificaUser"],function(n){return{init:function(){var a=$("#personal_wrap .attention"),t=$("#att_username").val();a.on("click",function(a){var e=$(this);n._verificaUser()&&$.ajax({type:"get",url:"/index.php/source/do_follow/"+t,async:!1,dataType:"jsonp",jsonp:"callback",success:function(a){0==a.succ?alert("关注失败！"):-2==a.succ?alert("当前refer不合法，请重试！"):-3==a.succ?alert("当前域名错误，请重试！"):e.addClass("al_attention").removeClass("attention").text("已关注")},error:function(a){console.log(a)}}),a.stopPropagation()})}}});