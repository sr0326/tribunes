<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd" >
<mapper namespace="com.zxh.dao.UserInfoDao">
  	<select id="queryUserInfo" resultType="com.zxh.entity.UserInfo">
  		select * from userinfo
  	</select>
  	<select id="queryUserbyphone" resultType="com.zxh.entity.UserInfo">
  		select * from userinfo where phone=#{phone}
  	</select>
  	<insert id="register" parameterType="com.zxh.entity.UserInfo">
		insert into userinfo
		<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="userId !=null">
				userId,
			</if>
			nickname,
			<if test="phone !=null">
				phone,
			</if>
			<if test="usepwd !=null">
				usepwd,
			</if>
		</trim>
		<trim prefix="values(" suffix=")" suffixOverrides=",">
			<if test="userId !=null">
				#{userId},
			</if>
			<if test="userId !=null">
				#{userId},
			</if>
			<if test="phone !=null">
				#{phone},
			</if>
			<if test="usepwd !=null">
				#{usepwd},
			</if>
		</trim>
  	</insert>
</mapper>
